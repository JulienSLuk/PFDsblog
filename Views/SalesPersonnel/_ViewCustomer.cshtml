@model IEnumerable<WEB2022_ZZFashion.Models.SPCustomerViewModel>

@if (Model.ToList().Count > 0) {

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th scope="col">Member ID</th>
			<th scope="col">Name</th>
			<th scope="col">Pending Voucher</th>
			<th scope="col">View</th>
		</tr>
	</thead>
	<tbody>
    @foreach (var item in Model) {
		<tr>
			<td>@item.MemberID</td>
			<td>@item.Name</td>
            <td>@item.PendingVoucherNo.ToString()</td>
			<td><a asp-action="PendingVoucher" asp-controller="SalesPersonnel" asp-route-id="@item.MemberID"><i class="fa fa-info" aria-hidden="true"></i></a></td>
		</tr>
    }
	</tbody>
</table>
}
else {
	<span style="color:red">No record found!</span>
}