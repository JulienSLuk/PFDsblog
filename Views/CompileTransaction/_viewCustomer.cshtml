@model IEnumerable<WEB2022_ZZFashion.Models.Customer>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Member ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Email Address</th>
                    <th>Contact Number</th>
                    <th>Residential Address</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.MemberID.ToString()</td>
                    <td>@item.Name</td>
                    <td>@item.Gender</td>
                    <td>@item.DOB</td>
                    <td>@item.Email</td>
                    <td>@item.ContactNo</td>
                    <td>@item.ResidentialAddr</td>

                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
