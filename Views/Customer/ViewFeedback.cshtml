@model IEnumerable<WEB2022Apr_P01_T3.Models.Feedback>


<p><a asp-action="CreateFeedback">Create New Feedback</a></p>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>MemberID</th>
                    <th>Title</th>
                    <th>Photo</th>
                    <th>Text</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color:white">@item.MemberID.ToString()</td>
                        <td style="color:white">@item.Title</td>
                        <td style="color:white">
                            @{ string imageFileName = item.ImageFileName; }
                            @if (imageFileName != null)
                            {
                                <img src="~/images/feedback/@imageFileName"
                                     style="width:50px" />
                            }

                        </td>
                        <td style="color:white">@item.Text</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <span style="color:red">No record found!</span>
}
