@{
    ViewData["Title"] = "Home Page";
}



<div class="parallax">
    <div class="homeContainer">
        @*<img src="~/images/home/stars.png" id="stars">*@
        <style>
            body, html {
                height: 100%;
            }

            .parallax {
                /* The image used */
                background-image: url('../images/home/Main.jpg');
                /* Full height */
                height: 100%;
                /* Create the parallax scrolling effect */
                background-attachment: fixed;
                background-position: center;
                background-repeat: no-repeat; 
                background-size: cover;
            }
        </style>
        <div class="textContainer">
            <p class="number1">Your One-stop website </p>
            <p class="number1">to secure supplementary aid!</p>
            <p class="location">We handle fact-checking charitable organizations for you!</p>
        </div>
    </div>
</div>

<div class="progress-container">
    <div class="progress-bar" id="myBar"></div>
</div>




<div style="height: 1000px; background-color: #3b3b3b; font-size: 36px ">
    <h2 class="header" style="background-color: #3b3b3b; color: white;">What we do</h2>

    <div class="about">
        <div class="aboutUsContainer">
            <lottie-player src="https://assets9.lottiefiles.com/private_files/lf30_3afizop1.json"
                            background="transparent" style="width: 15vw; margin-left: 2vw;" speed="1" class="photoHolder"
                            loop autoplay></lottie-player>
            <p class="aboutUsText">
                We personally verify donation drives for their authenticity
            </p>
        </div>
        <div class="aboutUsContainer">
            <lottie-player src="https://assets6.lottiefiles.com/packages/lf20_xgemoqmm.json"
                            background="transparent" speed="1" class="photoHolder" loop autoplay></lottie-player>
            <p class="aboutUsText">
                We partner with organizations dedicated to helping out those in need
            </p>
        </div>
        <div class="aboutUsContainer">
            <lottie-player src="https://assets9.lottiefiles.com/packages/lf20_0qba4tvf.json"
                            background="transparent" style="width: 17vw; margin-left: 1.2vw;" speed="1" loop autoplay class="photoHolder"></lottie-player>
            <p class="aboutUsText">
                We are an information resource that is easily accessible for Singaporeans
            </p>
        </div>
        <div class="aboutUsContainer">
            <lottie-player src="https://assets6.lottiefiles.com/packages/lf20_4XmSkB.json"
                            background="transparent" style="width: 200px; margin-left: 2vw;" speed="1" loop autoplay class="aboutUsPhoto"></lottie-player>
            <p class="aboutUsText">
                We focus on supplementary items needed for education
            </p>
        </div>
    </div>
</div>


<script type="text/javascript">
    let moon = document.getElementById('moon');
    let stars = document.getElementById('stars');
    let mountains_behind = document.getElementById('mountains_behind');
    let mountains_front = document.getElementById('mountains_front');
    let text = document.getElementById('text');
    let btn = document.getElementById('btn');
    let header = document.querySelector('header');
    window.addEventListener('scroll', function () {
        var value = window.scrollY;
        moon.style.top = -value * -1.05 + 'px';
        stars.style.left = value * 0.25 + 'px';
        mountains_behind.style.top = -value * -0.5 + 'px';
        header.style.top = -value * -0.5 + 'px';
        mountains_front.style.top = -value * 0 + 'px';
        text.style.marginTop = value * 1.5 + 'px';
        btn.style.marginTop = value * 1.5 + 'px';
        text.style.marginRight = value * 4 + 'px';
    });
</script>





