@model WEB2022Apr_P01_T3.Models.ProductManager

@{
    ViewData["Title"] = "EditProduct";
}
<div class="editContainer">
    <div id="login-container">
        <form asp-action="EditProduct" enctype="multipart/form-data">
            <fieldset class="loginFieldset">
                <div>
                    <input asp-for="blogName" class="inputText" placeholder="Product Name" />
                    <span asp-validation-for="blogName" class="text-danger"></span>
                </div>

                <div>
                    <img src="~/images/products/@Model.blogImage" alt="" class="productImage" />
                </div>



                <div>
                    <input asp-for="photoUpload" accept="image/jpeg" class="inputText" style="padding-top: 0.3vw" placeholder="Add photo (jpg format)">
                </div>


                <div>
                    <input type="submit" id="btnLogin" class="btn-dark inputText" value="Update Product" />
                </div>
                <div class="btn-dark inputText">
                    <a asp-action="ViewProducts" style="color: white;">Back</a>
                </div>

            </fieldset>
        </form>
    </div>
</div>

